<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plaga identificada"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TPlaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Plaga"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/IPlaga"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TPlaga"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/TDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descripciónde la plaga"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/IPlaga"
            app:layout_constraintStart_toStartOf="@+id/IPlaga"
            app:layout_constraintTop_toBottomOf="@+id/IPlaga" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Métodos de combate"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/TDescripcion"
            app:layout_constraintStart_toStartOf="@+id/TDescripcion"
            app:layout_constraintTop_toBottomOf="@+id/TDescripcion" />

        <TextView
            android:id="@+id/TCombate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descripción de los métodos de combate"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>